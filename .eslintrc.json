{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:sonarjs/recommended",
        "plugin:unicorn/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "script"
    },
    "plugins": [
        "@typescript-eslint",
        "sonarjs",
        "unicorn"
    ],
    "globals": {
        "math": "readonly",
        "FFmpeg": "readonly"
    },
    "rules": {
        "unicorn/prevent-abbreviations": "off"
    }
}
